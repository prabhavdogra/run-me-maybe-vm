{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "rmm Assembly",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#registers"
        },
        {
            "include": "#numbers"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#labels"
        },
        {
            "include": "#directives"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.semicolon.rmm",
                    "match": ";.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.rmm",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.rmm",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.single.rmm",
                    "begin": "'",
                    "end": "'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.rmm",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        },
        "registers": {
            "patterns": [
                {
                    "name": "variable.language.register.rmm",
                    "match": "\\b(r[0-9]+)\\b"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.float.rmm",
                    "match": "\\b[0-9]+\\.[0-9]+\\b"
                },
                {
                    "name": "constant.numeric.integer.rmm",
                    "match": "\\b[0-9]+\\b"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.rmm",
                    "match": "\\b(jmp|zjmp|nzjmp|call|ret|halt|entrypoint|native)\\b"
                },
                {
                    "name": "keyword.control.directive.rmm",
                    "match": "\\b(noop|print)\\b"
                },
                {
                    "name": "keyword.operator.rmm",
                    "match": "\\b(add|sub|mul|div|mod|cmpe|cmpne|cmpg|cmpl|cmpge|cmple|itof|ftoi|add_f|sub_f|mul_f|div_f)\\b"
                },
                {
                    "name": "keyword.other.rmm",
                    "match": "\\b(push|pop|dup|swap|inswap|indup|push_ptr|push_str|get_str|pop_str|dup_str|indup_str|swap_str|inswap_str|ref|deref|mov_str|index|mov|top|int_to_str)\\b"
                },
                {
                    "name": "constant.language.null.rmm",
                    "match": "\\bNULL\\b"
                }
            ]
        },
        "labels": {
            "patterns": [
                {
                    "name": "entity.name.function.label.rmm",
                    "match": "\\b[a-z_][a-z0-9_]*:"
                },
                {
                    "name": "string.other.label.usage.rmm",
                    "match": "\\b[a-z_][a-z0-9_]*\\b"
                }
            ]
        },
        "directives": {
            "patterns": [
                {
                    "name": "keyword.control.directive.rmm",
                    "match": "@(imp|def)"
                }
            ]
        }
    },
    "scopeName": "source.rmm"
}